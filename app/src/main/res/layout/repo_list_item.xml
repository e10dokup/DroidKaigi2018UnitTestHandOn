<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp">

    <TextView
        android:id="@+id/repo_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        tools:text="repository name here"/>

    <ImageView
        android:id="@+id/author_icon"
        android:layout_width="@dimen/author_icon_size"
        android:layout_height="@dimen/author_icon_size"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        tools:src="@mipmap/ic_launcher_round"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/repo_name"
        android:layout_alignStart="@id/repo_name"
        android:layout_below="@id/repo_name"
        android:layout_toLeftOf="@id/author_icon"
        android:layout_toStartOf="@id/author_icon"
        tools:text="this repository is something else!"/>

    <TextView
        android:id="@+id/updated_at"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/repo_name"
        android:layout_alignStart="@id/repo_name"
        android:layout_below="@id/description"
        android:layout_toLeftOf="@id/author_icon"
        android:layout_toStartOf="@id/author_icon"
        tools:text="2018-02-05"/>

</RelativeLayout>